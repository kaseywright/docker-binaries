#!/usr/bin/env sh
#set -x #echo on # DEBUG
set -e

IMAGE_TAG_VERSION=${IMAGE_TAG_VERSION:=latest}
DOCKER_USER=""

# "$(uname)" == "Darwin"
# "$(expr substr $(uname -s) 1 5)" == "Linux"
# "$(expr substr $(uname -s) 1 10)" == "MINGW32_NT"
if [ "$(uname)" = "Darwin" ]
then
  if [ "$FORCED_PORTS" = "" ]
  then
    DOCKER_NETWORKING="\
    -p 80:80 \
    -p 3000:3000 \
    -p 3306:3306 \
    -p 3307:3307 \
    -p 3308:3308 \
    -p 8000:8000 \
    -p 8001:8001 \
    -p 8002:8002 \
    -p 8080:8080 \
    -p 9000:9000"
  else
    DOCKER_NETWORKING="-p ${FORCED_PORTS}:${FORCED_PORTS}"
  fi
elif [ "$(expr substr $(uname -s) 1 5)" = "Linux" ]
then
  echo " >>> Executed in container at '$(uname -s)' host machine"
  DOCKER_USER="--user=$(id -u)"
  DOCKER_NETWORKING=--net=host
elif [ "$(expr substr $(uname -s) 1 10)" = "MINGW32_NT" ]
then
  echo "# Todo: Support for WIN 32bit"
elif [ "$(expr substr $(uname -s) 1 10)" = "MINGW64_NT" ]
then
  echo "# Todo: Support for WIN 64bit"
else
   echo "None of the condition met"
fi

if [ "$TTY" = "" ]
  then
    TTY="-i"
  else
    TTY="-it"
fi
echo docker run $TTY -v "${HOME}:${HOME}" -v "${HOME}":/root -v "${PWD}:${PWD}" -v /tmp/:/tmp/ -w "${PWD}" $DOCKER_NETWORKING $DOCKER_USER --sig-proxy=true --pid=host --rm "${IMAGE_NAME}:${IMAGE_TAG_VERSION}" "${COMMAND_TO_EXECUTE}" "$@"
docker run \
 $TTY \
 -v "${HOME}:${HOME}" \
 -v "${HOME}":/root \
 -v "${PWD}:${PWD}" \
 -v /tmp/:/tmp/ \
 -w "${PWD}" \
 $DOCKER_NETWORKING \
 $DOCKER_USER \
 --sig-proxy=true \
 --pid=host \
 --rm \
 "${IMAGE_NAME}:${IMAGE_TAG_VERSION}" \
 "${COMMAND_TO_EXECUTE}" \
 "$@"
